<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_sender_tap_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/activity_sender_logo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/activity_sender_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/activity_sender_help"
            android:text="@string/activity_sender_help"
            android:gravity="center"
            android:layout_marginStart="30dip"
            android:layout_marginEnd="30dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_sender_logo"
            android:layout_marginTop="32dp"/>

    </RelativeLayout>

</RelativeLayout>