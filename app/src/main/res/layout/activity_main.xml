<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.aflak.ff3.ui.Main.View.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main_tap_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/activity_main_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/activity_main_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/activity_main_help"
            android:text="@string/activity_main_help"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_main_logo"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>


    <GridView
        android:id="@+id/activity_main_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:gravity="center"/>

</RelativeLayout>
